int a=10;
const int* p=&a; //const修饰*，代表指针所指向的内存只读的，尝试修改这个内存的内容会出错，但是可以修改p的值，如p=NULL是ok的
*p=100;//报错，因为p指向的内存是只读的
p=NULL; //ok因为p本身不是只读的
int const* p2=&a ;//const修饰*，代表指针所指向的内存只读的，尝试修改这个内存的内容会出错，但是可以修改p的值，如p=NULL是ok的
*p2=20; //报错，因为p指向的内存是只读的
p=NULL; //ok因为p本身不是只读的
int* const p3=&a; //const修饰p3，代表指针变量的值为只读，他指向的内存内容可以修改，这里p3=NULL会报错
*p3=100; //ok
p3=NULL; //报错，因为p3是只读的
